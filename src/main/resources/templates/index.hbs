{{#partial "content"}}
    <h3>Add a new Event:</h3>

    <form action="/events/new" method="post">
        <label for="name">Event Name: </label>
        <input id="name" name="name" type="text">
        <br>
        <label for="agenda">Agenda: </label>
        <textarea class="agendaInput" id="agenda" name="agenda" type="text" cols="40" rows="6"></textarea>
        <!--<input class="agendaInput" id="agenda" name="agenda" type="text">-->

        <button type="submit" class="btn btn-default">Add Event</button>
    </form>
    <hr>
    <h3>Current Events:</h3>
    <hr>
    {{#if events}} <!--if events exist, then -->
    {{#each events }} <!--loop-->
    <h4>{{ name }}</h4> <!--show-->
    <p>{{ agenda }} <a href="/events/{{id}}">read more...</a></p> <!--show-->
    <hr>
    {{/each}}
    {{else}} <!--no events!-->
    <p>No events!</p>
    {{/if}}

{{/partial}}

{{> layout.hbs}}