{{#partial "content"}}
    <h4>Add a new Event:</h4>

    <form action="/events/new" method="post">
        <label for="name">Event Name: </label>
        <input id="name" name="name" type="text">
        <br>
        <label for="agenda">Agenda: </label>
        <input class="agendaInput" id="agenda" name="agenda" type="text">

        <button type="submit" class="btn btn-default">Add Event</button>
    </form>
    <hr>
    {{#if events}} <!--if events exist, then -->
    {{#each events }} <!--loop-->
    <h4>{{ name }}</h4> <!--show-->
    <p>{{ agenda }} <a href="/events/{{id}}">read more...</a></p> <!--show-->
    <hr>
    {{/each}}
    {{else}} <!--no events!-->
    <p>No events!</p>
    {{/if}}

{{/partial}}

{{> layout.hbs}}